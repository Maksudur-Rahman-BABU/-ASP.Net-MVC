@model Work_01.Models.Department
@{
    ViewBag.Title = "Create";
}


<div class="row">
    <div class="col">
        @using (Ajax.BeginForm(new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "msg", OnComplete = "clearAll" }))
        {
            @Html.AntiForgeryToken()
            <h2 class="mb-3">Add New Student</h2>
            <div class="row mb-2">
                @Html.LabelFor(x => x.DeptName, new { @class = "col-form-label col-form-label-sm col-2 r" })
                <div class="col-6">
                    @Html.TextBoxFor(x => x.DeptName, new { @class = "form-control form-control-sm r" })
                </div>
                <div class="col-4">
                    @Html.ValidationMessageFor(x => x.DeptName, "", new { @class = "text-danger" })
                </div>
            </div>
            
            
           
            <div class="row mb-2">
                <div class="col-10 offset-2">
                    <button class="btn btn-primary btn-sm" type="submit"><i class="fa fa-save"></i> Save</button>
                </div>
            </div>
            <div class="row">
                <div id="msg">

                </div>
            </div>
        }
    </div>
    <div>
        <a class="btn btn-link" href="@Url.Action("Index","Departments")">Back to the list</a>
    </div>
</div>
@section scripts {
    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script type="text/javascript">
        function clearAll()
        {
            $("#form0").trigger("reset");
        }
    </script>
}


